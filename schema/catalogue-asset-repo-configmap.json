{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "catalogue": {
      "type": "object",
      "properties": {
        "available": {
          "type": "boolean"
        },
        "storage": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "nfs"
                  ]
                },
                "server": {
                  "type": "string"
                },
                "rootDirectory": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "type",
                "server",
                "rootDirectory"
              ]
            }
          ]
        }
      },
      "required": [
        "available"
      ],
      "additionalProperties": false
    },
    "assetRepo": {
      "type": "object",
      "properties": { },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "catalogue",
    "assetRepo"
  ]
}
